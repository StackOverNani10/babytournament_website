{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "jsx": "react-jsx"
  },
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch index.ts"
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
      "exclude": ["node_modules"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": true
    }
  }
}
